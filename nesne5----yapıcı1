  class Memur
    {
        public string ad="mute";
        public int a;
         public Memur()
        {
            Console.WriteLine("Oluşturukdu\n");
            Console.WriteLine(a+"-*-*-*-*"+ad);
           
        }

        public Memur(string ad,int a)
        {
            this.ad = ad;
            this.a = a;
            Console.WriteLine(a+"---"+ad);
        }

        public Memur(int a):this("murtaza",a)
        {

        }
        public Memur(string ad) : this(ad, 0)
        {

        }
    }
